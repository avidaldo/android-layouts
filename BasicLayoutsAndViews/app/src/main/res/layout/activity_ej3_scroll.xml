<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ej3_scrollviews.Ej3ScrollViewActivity">

    <Button
        android:id="@+id/button_301"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ej11: ScrollView Vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_302"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ej12: ScrollView Horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_301" />

    <Button
        android:id="@+id/button_303"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ej13: Scrolls anidados"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_302" />

</androidx.constraintlayout.widget.ConstraintLayout>